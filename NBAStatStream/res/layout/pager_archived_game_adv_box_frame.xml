<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout 
            android:id="@+id/adv_box_away_team_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clickable="true" >
            <ImageView 
                android:id="@+id/adv_box_away_team_logo"
                android:layout_width="50.0dp"
                android:layout_height="50.0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>
            <TextView 
                android:id="@+id/adv_box_away_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/adv_box_home_team_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clickable="true" >
            <TextView
                android:id="@+id/adv_box_home_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/adv_box_home_team_logo"
                android:layout_width="50.0dp"
                android:layout_height="50.0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </LinearLayout>
	    
    </LinearLayout>

    <FrameLayout 
        android:id="@+id/adv_box_frag_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>